body
	font-family "Helvetica Neue", "Lucida Grande", "Arial"
	font-size 13px
	text-stroke 1px rgba(255,255,255,0.1)
	color #555
h1, h2
	margin 0
	font-size 22px
	color #343434
	text-align center
h1
	text-shadow 1px 2px 2px #ddd
	font-size 60px
#articles
	text-align left
	margin-left auto
	margin-right auto
	width 320px
	.article
		margin 20px
		.created_at
			display none
		.title
			font-weight bold
			text-decoration underline
			background-color #eee
		.body
			background-color #ffa
.article

	.title
		font-size 28px
		margin-left 10px
	.body
		font-size 20px
		margin-left 10px
	.created_at
		display none
	input
		margin-bottom 10px
	input[type =text]
		width 490px
		padding-left 10px
		font-size 15px
	input[type =button], input[type =submit]
		text-align left
		margin-left auto
		border-radius 2px
		background #ffaaaa
		color black
	textarea
		width 490px
		height 90px
		resize none
		padding 10px
		font-size 15px
		color green
		margin-bottom 20px
	
		